@{
}

@{
    ViewData["Title"] = "Resultado del Análisis";
}

<h2>Resultado del Análisis</h2>

@if (ViewBag.Emocion is PW3.Emoji.Logica.EmocionResult res)
{
    <strong>Emoción detectada:</strong> @res.Emocion <br />
}
else
{
    <p>No se detectó ninguna emoción.</p>
}

@if (ViewBag.ImagenRuta != null)
{
    <img src="@ViewBag.ImagenRuta" alt="Imagen analizada" style="max-width:300px;" />
}

<a asp-action="Analizar">Analizar otra imagen</a>
